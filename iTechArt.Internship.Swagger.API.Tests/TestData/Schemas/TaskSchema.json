{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "Task": {
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "name": {
        "type": "string"
      },
      "sourceSystemId": {
        "type": "string",
        "format": "uuid"
      },
      "targetSystemId": {
        "type": "string",
        "format": "uuid"
      },
      "isActive": {
        "type": "boolean"
      },
      "lastExecutionDate": {
        "anyOf": [
          {
            "type": "string",
            "format": "date-time"
          },
          {
            "type": "null"
          }
        ]
      }
    },
    "required": [
      "id",
      "isActive",
      "name",
      "sourceSystemId",
      "targetSystemId",
      "lastExecutionDate"
    ],
    "additionalItems": false,
    "additionalProperties": false,
    "title": "Task"
  }
}