{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "array",
  "items": [
    {
      "$ref": "#/definitions/TasksGroup"
    }
  ],
  "definitions": {
    "TasksGroup": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "lastTriggeredTime": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "null"
            }
          ]
        },
        "isActive": {
          "type": "boolean"
        },
        "taskGroupMembers": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/TaskGroupMember"
          }
        }
      },
      "required": [
        "id",
        "isActive",
        "lastTriggeredTime",
        "name",
        "taskGroupMembers"
      ],
      "additionalItems": false,
      "additionalProperties": false,
      "title": "TasksGroup"
    },
    "TaskGroupMember": {
      "type": "object",
      "properties": {
        "executionOrder": {
          "type": "integer"
        },
        "task": {
          "$ref": "#/definitions/Task"
        }
      },
      "required": [
        "executionOrder",
        "task"
      ],
      "additionalItems": false,
      "additionalProperties": false,
      "title": "TaskGroupMember"
    },
    "Task": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "sourceSystemId": {
          "type": "string",
          "format": "uuid"
        },
        "targetSystemId": {
          "type": "string",
          "format": "uuid"
        },
        "isActive": {
          "type": "boolean"
        },
        "lastExecutionDate": {
          "anyOf": [
            {
              "type": "string",
              "format": "date-time"
            },
            {
              "type": "null"
            }
          ]
        }
      },
      "required": [
        "id",
        "isActive",
        "name",
        "sourceSystemId",
        "targetSystemId",
        "lastExecutionDate"
      ],
      "additionalItems": false,
      "additionalProperties": false,
      "title": "Task"
    }
  }
}